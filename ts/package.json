{
  "name": "@elribonazo/ridb",
  "version": "0.0.0-rc2",
  "description": "",
  "exports": {
    ".": {
      "require": {
        "types": "./cjs/index.d.ts",
        "default": "./cjs/index.js"
      },
      "import": {
        "types": "./esm/index.d.ts",
        "default": "./esm/index.js"
      },
      "browser": {
        "types": "./umd/index.d.ts",
        "default": "./umd/index.js"
      }
    }
  },
  "scripts": {
    "build": "npm run build:rust && npm run build:esbuild && npm run build:types:umd && npm run build:types:cjs && npm run build:types:esm",
    "build:rust": "cd .. && wasm-pack build --target=bundler",
    "build:esbuild": "node esbuild.config.js",
    "build:types:umd": "npx dts-bundle-generator src/index.ts --umd-module-name RIDB -o ./umd/index.d.ts",
    "build:types:cjs": "npx dts-bundle-generator src/index.ts -o ./cjs/index.d.ts",
    "build:types:esm": "npx dts-bundle-generator src/index.ts -o ./esm/index.d.ts",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "vitest --environment node --run tests/node.test.ts",
    "test:browser": "vitest --environment jsdom --browser --browser.name=chrome --run tests/browser.test.ts",
    "test:coverage": "npx vitest tests/coverage.test.ts",
    "test:serve":"npm run test:coverage -- --ui",
    "coverage": "vitest run --coverage tests/coverage.test.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@esbuild-plugins/node-resolve": "^0.2.2",
    "@types/node": "^20.14.2",
    "@vitest/browser": "^1.6.0",
    "@vitest/coverage-istanbul": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "esbuild": "0.21.5",
    "esbuild-plugin-wasm": "^1.1.0",
    "jsdom": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^1.6.0",
    "webdriverio": "^7.16.4"
  }
}
